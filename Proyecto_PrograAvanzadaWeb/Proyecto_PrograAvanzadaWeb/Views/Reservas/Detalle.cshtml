@model Proyecto_PrograAvanzadaWeb.Models.TourDisponibleViewModel
@{
    ViewData["Title"] = "Detalle del Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <div class="error-container">
        <div class="error-message">
            <h2>Tour no encontrado</h2>
            <p>El tour que buscas no está disponible.</p>
            <a href="/Reservas/Explorar" class="btn-modern btn-primary">Explorar Tours</a>
        </div>
    </div>
    return;
}

<div class="detalle-container">
    <div class="page-header">
        <div class="header-content">
            <div class="breadcrumb-nav">
                <a href="/Reservas/Explorar" class="breadcrumb-link">
                    <i class="mdi mdi-compass-outline"></i> Explorar Tours
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">@Model.Nombre</span>
            </div>
            <h1 class="page-title">
                <i class="mdi mdi-eye me-2"></i>
                Detalle del Tour
            </h1>
            <p class="page-subtitle">Toda la información sobre este increíble tour</p>
        </div>
        <div class="availability-badge">
            <div class="cupos-info">
                <span class="cupos-number">@Model.CuposDisponibles</span>
                <span class="cupos-label">cupos disponibles</span>
            </div>
        </div>
    </div>

    <div class="detalle-content">
        <div class="content-grid">
            <!-- Información Principal del Tour -->
            <div class="tour-main-info">
                <div class="tour-hero">
                    <div class="tour-image-container">
                        <div class="tour-image">
                            <div class="tour-badge">
                                <i class="mdi mdi-map-marker"></i>
                            </div>
                            <div class="price-overlay">
                                <span class="price-amount">@Model.PrecioFormateado</span>
                                <span class="price-label">por persona</span>
                            </div>
                        </div>
                    </div>

                    <div class="tour-header-info">
                        <h2 class="tour-title">@Model.Nombre</h2>
                        <div class="tour-destination">
                            <i class="mdi mdi-map-marker-outline"></i>
                            @Model.Destino
                        </div>
                        <div class="tour-organizer">
                            <i class="mdi mdi-account-circle"></i>
                            <span>Organizado por <strong>@Model.NombreCreador</strong></span>
                        </div>
                    </div>
                </div>

                <div class="tour-description-section">
                    <h3 class="section-title">
                        <i class="mdi mdi-text"></i>
                        Descripción del Tour
                    </h3>
                    <div class="description-content">
                        @Html.Raw(Model.Descripcion.Replace("\n", "<br>"))
                    </div>
                </div>

                <div class="tour-highlights">
                    <h3 class="section-title">
                        <i class="mdi mdi-star"></i>
                        Lo que incluye este tour
                    </h3>
                    <div class="highlights-grid">
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Guía turístico profesional</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Transporte ida y vuelta</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Actividades incluidas</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Seguro de viaje</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel de Reserva -->
            <div class="reserva-panel">
                <div class="panel-card">
                    <div class="panel-header">
                        <h3><i class="mdi mdi-calendar-plus"></i> Reservar Tour</h3>
                    </div>

                    <div class="panel-body">
                        <div class="tour-dates">
                            <div class="date-item">
                                <i class="mdi mdi-calendar-start"></i>
                                <div class="date-info">
                                    <span class="date-label">Fecha de Inicio</span>
                                    <span class="date-value">@Model.FechaInicioFormateada</span>
                                </div>
                            </div>
                            <div class="date-item">
                                <i class="mdi mdi-calendar-end"></i>
                                <div class="date-info">
                                    <span class="date-label">Fecha de Fin</span>
                                    <span class="date-value">@Model.FechaFinFormateada</span>
                                </div>
                            </div>
                            <div class="date-item">
                                <i class="mdi mdi-clock-outline"></i>
                                <div class="date-info">
                                    <span class="date-label">Duración</span>
                                    <span class="date-value">@Model.DuracionEnDias día@(Model.DuracionEnDias != 1 ? "s" : "")</span>
                                </div>
                            </div>
                        </div>

                        <div class="capacity-info">
                            <h4>Disponibilidad</h4>
                            <div class="capacity-details">
                                <div class="capacity-numbers">
                                    <span>@Model.PersonasReservadas de @Model.CantidadPersonas personas</span>
                                    <span class="percentage">@Model.PorcentajeOcupacion.ToString("F0")% ocupado</span>
                                </div>
                                <div class="capacity-bar">
                                    <div class="capacity-fill" style="width: @Model.PorcentajeOcupacion%"></div>
                                </div>
                                <div class="capacity-status">
                                    @if (Model.CuposDisponibles > 5)
                                    {
                                        <span class="status-good">
                                            <i class="mdi mdi-check-circle"></i>
                                            Excelente disponibilidad
                                        </span>
                                    }
                                    else if (Model.CuposDisponibles > 0)
                                    {
                                        <span class="status-limited">
                                            <i class="mdi mdi-alert-circle"></i>
                                            Cupos limitados - ¡Reserva pronto!
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-full">
                                            <i class="mdi mdi-close-circle"></i>
                                            Tour completo
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="price-summary">
                            <div class="price-breakdown">
                                <div class="price-row">
                                    <span>Precio por persona:</span>
                                    <span class="price">@Model.PrecioFormateado</span>
                                </div>
                            </div>
                        </div>

                        <div class="panel-actions">
                            @if (Model.TieneCuposDisponibles)
                            {
                                <a href="/Reservas/CrearReserva?idTour=@Model.IdTour" class="btn-modern btn-primary btn-large">
                                    <i class="mdi mdi-calendar-plus"></i>
                                    Reservar Ahora
                                </a>
                                <a href="/Reservas/MisReservas" class="btn-modern btn-secondary">
                                    <i class="mdi mdi-bookmark-multiple"></i>
                                    Ver Mis Reservas
                                </a>
                            }
                            else
                            {
                                <button class="btn-modern btn-disabled btn-large" disabled>
                                    <i class="mdi mdi-close-circle"></i>
                                    Sin Cupos Disponibles
                                </button>
                            }
                            <a href="/Reservas/Explorar" class="btn-modern btn-outline">
                                <i class="mdi mdi-arrow-left"></i>
                                Volver a Explorar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Info adicional -->
                <div class="info-cards">
                    <div class="info-card">
                        <div class="info-icon">
                            <i class="mdi mdi-shield-check"></i>
                        </div>
                        <div class="info-content">
                            <h5>Cancelación Gratuita</h5>
                            <p>Puedes cancelar tu reserva hasta 24 horas antes</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">
                            <i class="mdi mdi-headset"></i>
                        </div>
                        <div class="info-content">
                            <h5>Soporte 24/7</h5>
                            <p>Atención al cliente disponible en todo momento</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">
                            <i class="mdi mdi-medal"></i>
                        </div>
                        <div class="info-content">
                            <h5>Mejor Precio</h5>
                            <p>Garantizamos el mejor precio del mercado</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

