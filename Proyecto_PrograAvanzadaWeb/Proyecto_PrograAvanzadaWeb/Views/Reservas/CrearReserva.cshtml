@model CrearReservaViewModel
@{
    ViewData["Title"] = "Crear Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .reserva-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .reserva-header {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        color: white;
        text-align: center;
    }

    .reserva-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .reserva-form-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .tour-summary {
        background: #f9fafb;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        border-left: 4px solid #10b981;
    }

    .summary-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #374151;
        margin-bottom: 15px;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #e5e7eb;
    }

        .summary-item:last-child {
            border-bottom: none;
        }

    .form-section {
        margin-bottom: 30px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #10b981;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }

    .price-calculation {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border: 2px solid #a7f3d0;
        border-radius: 15px;
        padding: 25px;
        margin-top: 30px;
        text-align: center;
    }

    .price-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        font-size: 1.1rem;
    }

    .price-total {
        font-size: 2rem;
        font-weight: 700;
        color: #065f46;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 2px solid #a7f3d0;
    }

    .btn-submit {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        border: none;
        padding: 16px 32px;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        margin-top: 30px;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
        }

    .form-hint {
        font-size: 0.85rem;
        color: #6b7280;
        margin-top: 5px;
    }
</style>

<div class="reserva-container">
    <div class="reserva-header">
        <h1 class="reserva-title">
            <i class="mdi mdi-calendar-check"></i>
            Crear Reserva
        </h1>
        <p>Complete los detalles para confirmar su reserva</p>
    </div>

    <div class="reserva-form-card">
        <div class="tour-summary">
            <h3 class="summary-title">Resumen del Tour</h3>
            <div class="summary-item">
                <span>Tour:</span>
                <strong>@Model.NombreTour</strong>
            </div>
            <div class="summary-item">
                <span>Precio por persona:</span>
                <strong>₡@Model.PrecioPorPersona.ToString("N0")</strong>
            </div>
        </div>

        <form method="post" action="/Reservas/CrearReserva" id="reservaForm">
            <input type="hidden" name="IdTour" value="@Model.IdTour" />
            <input type="hidden" name="PrecioPorPersona" value="@Model.PrecioPorPersona" />

            <div class="form-section">
                <label class="form-label" for="FechaTour">
                    <i class="mdi mdi-calendar"></i>
                    Fecha del Tour
                </label>
                <input type="date" id="FechaTour" name="FechaTour" class="form-control" required>
                <div class="form-hint">Seleccione la fecha en que desea realizar el tour</div>
            </div>

            <div class="form-section">
                <label class="form-label" for="CantidadPersonas">
                    <i class="mdi mdi-account-group"></i>
                    Número de Personas
                </label>
                <input type="number" id="CantidadPersonas" name="CantidadPersonas"
                       class="form-control" min="1" required onchange="calcularTotal()">
                <div class="form-hint">Ingrese la cantidad de personas que participarán en el tour</div>
            </div>

            <div class="price-calculation">
                <div class="price-row">
                    <span>Precio por persona:</span>
                    <span>₡@Model.PrecioPorPersona.ToString("N0")</span>
                </div>
                <div class="price-row">
                    <span>Número de personas:</span>
                    <span id="personas-display">0</span>
                </div>
                <div class="price-total">
                    Total: ₡<span id="precio-total">0</span>
                </div>
            </div>

            <button type="submit" class="btn-submit">
                <i class="mdi mdi-check-circle"></i>
                Confirmar Reserva
            </button>
        </form>
    </div>
</div>

<script>
    function calcularTotal() {
        const personas = document.getElementById('CantidadPersonas').value || 0;
        const precioPorPersona = @Model.PrecioPorPersona;
        const total = personas * precioPorPersona;

        document.getElementById('personas-display').textContent = personas;
        document.getElementById('precio-total').textContent = total.toLocaleString('es-CR');
    }

    // Establecer fecha mínima como hoy
    document.addEventListener('DOMContentLoaded', function () {
        const fechaInput = document.getElementById('FechaTour');
        const hoy = new Date().toISOString().split('T')[0];
        fechaInput.min = hoy;
    });
</script>