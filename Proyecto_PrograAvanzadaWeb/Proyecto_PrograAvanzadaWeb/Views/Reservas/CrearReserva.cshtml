@model Proyecto_PrograAvanzadaWeb.Models.CrearReservaViewModel
@{
    ViewData["Title"] = "Crear Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reserva-container">
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="mdi mdi-alert-circle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="page-header">
        <div class="header-content">
            <div class="breadcrumb-nav">
                <a href="/Reservas/Explorar" class="breadcrumb-link">
                    <i class="mdi mdi-compass-outline"></i> Explorar Tours
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">Crear Reserva</span>
            </div>
            <h1 class="page-title">
                <i class="mdi mdi-calendar-plus me-2"></i>
                Crear Reserva
            </h1>
            <p class="page-subtitle">Completa tu reserva para este increíble tour</p>
        </div>
        <div class="header-icon">
            <i class="mdi mdi-ticket-confirmation"></i>
        </div>
    </div>

    <div class="reserva-content">
        <div class="content-grid">
            <!-- Información del Tour -->
            <div class="tour-info-card">
                <div class="card-header">
                    <h3><i class="mdi mdi-information"></i> Información del Tour</h3>
                </div>
                <div class="card-body">
                    <div class="tour-summary">
                        <div class="tour-image-placeholder">
                            <div class="tour-badge">
                                <i class="mdi mdi-map-marker"></i>
                            </div>
                        </div>

                        <div class="tour-details">
                            <h4 class="tour-name">@Model.Tour.Nombre</h4>
                            <div class="tour-destination">
                                <i class="mdi mdi-map-marker-outline"></i>
                                @Model.Tour.Destino
                            </div>

                            <div class="tour-meta">
                                <div class="meta-item">
                                    <i class="mdi mdi-calendar-range"></i>
                                    <span>@Model.Tour.FechaInicioFormateada - @Model.Tour.FechaFinFormateada</span>
                                </div>
                                <div class="meta-item">
                                    <i class="mdi mdi-clock-outline"></i>
                                    <span>@Model.Tour.DuracionEnDias día@(Model.Tour.DuracionEnDias != 1 ? "s" : "")</span>
                                </div>
                                <div class="meta-item">
                                    <i class="mdi mdi-account-circle"></i>
                                    <span>@Model.Tour.NombreCreador</span>
                                </div>
                            </div>

                            <div class="availability-info">
                                <div class="availability-text">
                                    <strong>Disponibilidad:</strong> @Model.Tour.CuposDisponibles de @Model.Tour.CantidadPersonas cupos
                                </div>
                                <div class="availability-bar">
                                    <div class="availability-fill" style="width: @Model.Tour.PorcentajeOcupacion%"></div>
                                </div>
                            </div>

                            <div class="price-info">
                                <span class="price-label">Precio por persona:</span>
                                <span class="price-amount">@Model.Tour.PrecioFormateado</span>
                            </div>
                        </div>
                    </div>

                    <div class="tour-description">
                        <h5>Descripción:</h5>
                        <p>@Model.Tour.Descripcion</p>
                    </div>
                </div>
            </div>

            <!-- Formulario de Reserva -->
            <div class="reserva-form-card">
                <div class="card-header">
                    <h3><i class="mdi mdi-form-select"></i> Detalles de la Reserva</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="CrearReserva" id="reservaForm">
                        <input type="hidden" asp-for="IdTour" />

                        <div class="form-section">
                            <div class="form-group">
                                <label asp-for="CantidadPersonas" class="form-label">
                                    <i class="mdi mdi-account-group"></i>
                                    Cantidad de Personas
                                </label>
                                <div class="quantity-selector">
                                    <button type="button" class="quantity-btn" id="decrease-btn">
                                        <i class="mdi mdi-minus"></i>
                                    </button>
                                    <input asp-for="CantidadPersonas"
                                           type="number"
                                           class="quantity-input"
                                           min="1"
                                           max="@Model.Tour.CuposDisponibles"
                                           value="@Model.CantidadPersonas"
                                           id="cantidad-input" />
                                    <button type="button" class="quantity-btn" id="increase-btn">
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                </div>
                                <div class="form-hint">
                                    Máximo @Model.Tour.CuposDisponibles persona@(Model.Tour.CuposDisponibles != 1 ? "s" : "") disponible@(Model.Tour.CuposDisponibles != 1 ? "s" : "")
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Comentarios" class="form-label">
                                    <i class="mdi mdi-message-text"></i>
                                    Comentarios o Solicitudes Especiales
                                </label>
                                <textarea asp-for="Comentarios"
                                          class="form-control"
                                          rows="4"
                                          placeholder="Escribe aquí cualquier comentario o solicitud especial..."></textarea>
                                <div class="form-hint">
                                    Opcional: Menciona cualquier requerimiento especial, alergias alimentarias, etc.
                                </div>
                            </div>
                        </div>

                        <div class="calculation-section">
                            <h4>Resumen de Costos</h4>
                            <div class="cost-breakdown">
                                <div class="cost-item">
                                    <span>Precio por persona:</span>
                                    <span id="precio-unitario">@Model.Tour.PrecioFormateado</span>
                                </div>
                                <div class="cost-item">
                                    <span>Cantidad de personas:</span>
                                    <span id="cantidad-display">@Model.CantidadPersonas</span>
                                </div>
                                <div class="cost-separator"></div>
                                <div class="cost-total">
                                    <span>Total a pagar:</span>
                                    <span id="precio-total">₡@((Model.Tour.Precio * Model.CantidadPersonas).ToString("N0"))</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-modern btn-primary" id="submit-btn">
                                <i class="mdi mdi-calendar-check"></i>
                                Confirmar Reserva
                            </button>
                            <a href="/Reservas/Detalle/@Model.IdTour" class="btn-modern btn-secondary">
                                <i class="mdi mdi-arrow-left"></i>
                                Volver al Tour
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

