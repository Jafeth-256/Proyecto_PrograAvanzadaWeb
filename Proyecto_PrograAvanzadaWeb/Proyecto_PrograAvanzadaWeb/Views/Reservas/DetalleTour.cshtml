@model Tour
@{
    ViewData["Title"] = Model.Nombre;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .tour-detail-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .tour-hero {
        height: 400px;
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        position: relative;
        margin-bottom: 30px;
        overflow: hidden;
    }

        .tour-hero::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 70%;
            background: linear-gradient(transparent, rgba(0,0,0,0.7));
        }

    .tour-hero-content {
        position: absolute;
        bottom: 30px;
        left: 30px;
        right: 30px;
        color: white;
    }

    .tour-hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 15px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .tour-hero-location {
        font-size: 1.3rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .tour-content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
    }

    .tour-info-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        margin-bottom: 20px;
    }

    .tour-section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #374151;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .tour-description {
        color: #6b7280;
        line-height: 1.8;
        font-size: 1.05rem;
    }

    .tour-features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: #f9fafb;
        border-radius: 12px;
        border-left: 4px solid #10b981;
    }

    .feature-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.3rem;
    }

    .feature-info h4 {
        margin: 0;
        font-size: 1rem;
        font-weight: 600;
        color: #374151;
    }

    .feature-info p {
        margin: 0;
        font-size: 0.9rem;
        color: #6b7280;
    }

    .booking-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        position: sticky;
        top: 20px;
    }

    .price-display {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border: 2px solid #a7f3d0;
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        margin-bottom: 25px;
    }

    .price-label {
        font-size: 0.9rem;
        color: #059669;
        margin-bottom: 5px;
    }

    .price-amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: #065f46;
    }

    .price-per {
        font-size: 0.9rem;
        color: #059669;
    }

    .booking-info {
        margin-bottom: 25px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #e5e7eb;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        color: #6b7280;
        font-size: 0.95rem;
    }

    .info-value {
        font-weight: 600;
        color: #374151;
    }

    .btn-book {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        border: none;
        padding: 16px 32px;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-book:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
        }

    .availability-tag {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: #dcfce7;
        color: #166534;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .creator-info {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        background: #f9fafb;
        border-radius: 12px;
        margin-top: 20px;
    }

    .creator-avatar {
        width: 50px;
        height: 50px;
        background: #6b7280;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1.2rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #6b7280;
        text-decoration: none;
        font-weight: 600;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

        .back-link:hover {
            color: #374151;
            transform: translateX(-5px);
        }
</style>

<div class="tour-detail-container">
    <a href="/Reservas/Tours" class="back-link">
        <i class="mdi mdi-arrow-left"></i>
        Volver a Tours
    </a>

    <div class="tour-hero" style="background-image: url('https://source.unsplash.com/1200x600/?@(Model.Destino),tourism');">
        <div class="tour-hero-content">
            <h1 class="tour-hero-title">@Model.Nombre</h1>
            <div class="tour-hero-location">
                <i class="mdi mdi-map-marker"></i>
                @Model.Destino
            </div>
        </div>
    </div>

    <div class="tour-content-grid">
        <div class="tour-main-content">
            <div class="tour-info-card">
                <h2 class="tour-section-title">
                    <i class="mdi mdi-information"></i>
                    Descripción del Tour
                </h2>
                <p class="tour-description">@Model.Descripcion</p>
            </div>

            <div class="tour-info-card">
                <h2 class="tour-section-title">
                    <i class="mdi mdi-star"></i>
                    Características del Tour
                </h2>
                <div class="tour-features">
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="mdi mdi-calendar-range"></i>
                        </div>
                        <div class="feature-info">
                            <h4>Duración</h4>
                            <p>@((Model.FechaFin - Model.FechaInicio).Days + 1) días</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="mdi mdi-account-group"></i>
                        </div>
                        <div class="feature-info">
                            <h4>Capacidad</h4>
                            <p>@Model.CantidadPersonas personas</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="mdi mdi-map-marker-radius"></i>
                        </div>
                        <div class="feature-info">
                            <h4>Destino</h4>
                            <p>@Model.Destino</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="mdi mdi-clock-outline"></i>
                        </div>
                        <div class="feature-info">
                            <h4>Fechas</h4>
                            <p>@Model.FechaInicio.ToString("dd MMM") - @Model.FechaFin.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tour-info-card">
                <h2 class="tour-section-title">
                    <i class="mdi mdi-account-tie"></i>
                    Información del Organizador
                </h2>
                <div class="creator-info">
                    <div class="creator-avatar">
                        @Model.NombreCreador.Substring(0, 1).ToUpper()
                    </div>
                    <div>
                        <h4 style="margin: 0; color: #374151;">@Model.NombreCreador</h4>
                        <p style="margin: 0; color: #6b7280; font-size: 0.9rem;">Operador Turístico Certificado</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="tour-sidebar">
            <div class="booking-card">
                <div class="price-display">
                    <div class="price-label">Precio desde</div>
                    <div class="price-amount">₡@Model.Precio.ToString("N0")</div>
                    <div class="price-per">por persona</div>
                </div>

                <div class="booking-info">
                    <div class="info-row">
                        <span class="info-label">Fecha de inicio:</span>
                        <span class="info-value">@Model.FechaInicio.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Fecha de fin:</span>
                        <span class="info-value">@Model.FechaFin.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Duración:</span>
                        <span class="info-value">@((Model.FechaFin - Model.FechaInicio).Days + 1) días</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Disponibilidad:</span>
                        <span class="info-value">
                            <span class="availability-tag">
                                <i class="mdi mdi-check-circle"></i>
                                Disponible
                            </span>
                        </span>
                    </div>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Reservas/CrearReserva/@Model.IdTour" class="btn-book">
                        <i class="mdi mdi-calendar-check"></i>
                        Reservar Ahora
                    </a>
                }
                else
                {
                    <a href="/Home/Index" class="btn-book">
                        <i class="mdi mdi-login"></i>
                        Iniciar Sesión para Reservar
                    </a>
                }
            </div>
        </div>
    </div>
</div>
