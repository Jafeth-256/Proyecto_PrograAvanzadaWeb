@model Proyecto_PrograAvanzadaWeb.Models.EventoUniversitarioViewModel
@{
    ViewData["Title"] = "Detalle del Evento Universitario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <div class="error-container">
        <div class="error-message">
            <h2>Evento no encontrado</h2>
            <p>El evento universitario que buscas no está disponible.</p>
            <a href="/EventosUniversitarios/Index" class="btn-modern btn-primary">Volver a Eventos</a>
        </div>
    </div>
    return;
}

<div class="detalle-container">
    <div class="page-header">
        <div class="header-content">
            <div class="breadcrumb-nav">
                <a href="/EventosUniversitarios/Index" class="breadcrumb-link">
                    <i class="mdi mdi-school"></i> Eventos Universitarios
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">@Model.Nombre</span>
            </div>
            <h1 class="page-title">
                <i class="mdi mdi-eye me-2"></i>
                Detalle del Evento Universitario
            </h1>
            <p class="page-subtitle">Información completa sobre el evento académico</p>
        </div>
        <div class="availability-badge">
            <div class="status-info">
                <span class="status-badge status-@(Model.EventoTerminado ? "finished" : Model.EsEventoEnCurso ? "active" : "upcoming")">
                    <i class="mdi @(Model.EventoTerminado ? "mdi-check-circle" : Model.EsEventoEnCurso ? "mdi-play-circle" : "mdi-clock-outline")"></i>
                    @Model.EstadoEvento
                </span>
            </div>
        </div>
    </div>

    <div class="detalle-content">
        <div class="content-grid">
            <!-- Información Principal del Evento -->
            <div class="evento-main-info">
                <div class="evento-hero">
                    <div class="evento-image-container">
                        <div class="evento-image">
                            <div class="evento-badge">
                                <i class="mdi mdi-school"></i>
                            </div>
                            <div class="price-overlay">
                                @if (Model.Precio > 0)
                                {
                                    <span class="price-amount">@Model.PrecioFormateado</span>
                                    <span class="price-label">por persona</span>
                                }
                                else
                                {
                                    <span class="price-amount">GRATUITO</span>
                                    <span class="price-label">entrada libre</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="evento-header-info">
                        <h2 class="evento-title">@Model.Nombre</h2>
                        <div class="evento-universidad">
                            <i class="mdi mdi-bank"></i>
                            @Model.Universidad
                        </div>
                        <div class="evento-ubicacion">
                            <i class="mdi mdi-map-marker-outline"></i>
                            @Model.Ubicacion
                        </div>
                        <div class="evento-organizador">
                            <i class="mdi mdi-account-circle"></i>
                            <span>Organizado por <strong>@Model.NombreCreador</strong></span>
                        </div>
                    </div>
                </div>

                <div class="evento-description-section">
                    <h3 class="section-title">
                        <i class="mdi mdi-text"></i>
                        Descripción del Evento
                    </h3>
                    <div class="description-content">
                        @Html.Raw(Model.Descripcion.Replace("\n", "<br>"))
                    </div>
                </div>

                <div class="evento-highlights">
                    <h3 class="section-title">
                        <i class="mdi mdi-star"></i>
                        Características del Evento
                    </h3>
                    <div class="highlights-grid">
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Evento académico oficial</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Certificado de participación</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Material didáctico incluido</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Networking estudiantil</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Oportunidades de aprendizaje</span>
                        </div>
                        <div class="highlight-item">
                            <i class="mdi mdi-check-circle"></i>
                            <span>Conexión con profesionales</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel de Información -->
            <div class="info-panel">
                <div class="panel-card">
                    <div class="panel-header">
                        <h3><i class="mdi mdi-information"></i> Información del Evento</h3>
                    </div>

                    <div class="panel-body">
                        <div class="evento-dates">
                            <div class="date-item">
                                <i class="mdi mdi-calendar-start"></i>
                                <div class="date-info">
                                    <span class="date-label">Fecha de Inicio</span>
                                    <span class="date-value">@Model.FechaInicioFormateada</span>
                                </div>
                            </div>
                            <div class="date-item">
                                <i class="mdi mdi-calendar-end"></i>
                                <div class="date-info">
                                    <span class="date-label">Fecha de Fin</span>
                                    <span class="date-value">@Model.FechaFinFormateada</span>
                                </div>
                            </div>
                            <div class="date-item">
                                <i class="mdi mdi-clock-outline"></i>
                                <div class="date-info">
                                    <span class="date-label">Duración</span>
                                    <span class="date-value">@Model.DuracionEnHoras hora@(Model.DuracionEnHoras != 1 ? "s" : "")</span>
                                </div>
                            </div>
                        </div>

                        <div class="capacity-info">
                            <h4>Capacidad del Evento</h4>
                            <div class="capacity-details">
                                <div class="capacity-icon">
                                    <i class="mdi mdi-account-group"></i>
                                </div>
                                <div class="capacity-text">
                                    <span class="capacity-number">@Model.CantidadPersonas</span>
                                    <span class="capacity-label">personas máximo</span>
                                </div>
                            </div>
                        </div>

                        <div class="price-summary">
                            <div class="price-breakdown">
                                @if (Model.Precio > 0)
                                {
                                    <div class="price-row">
                                        <span>Precio de entrada:</span>
                                        <span class="price">@Model.PrecioFormateado</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="price-row free-event">
                                        <span>Entrada:</span>
                                        <span class="price free">GRATUITA</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="panel-actions">
                            @if (Model.EsEventoFuturo)
                            {
                                <button class="btn-modern btn-success btn-large" onclick="mostrarInteres()">
                                    <i class="mdi mdi-hand-heart"></i>
                                    Mostrar Interés
                                </button>
                                <button class="btn-modern btn-primary" onclick="compartirEvento()">
                                    <i class="mdi mdi-share-variant"></i>
                                    Compartir Evento
                                </button>
                            }
                            else if (Model.EsEventoEnCurso)
                            {
                                <button class="btn-modern btn-info btn-large" onclick="obtenerInformacion()">
                                    <i class="mdi mdi-information"></i>
                                    Obtener Información
                                </button>
                            }
                            else
                            {
                                <button class="btn-modern btn-disabled btn-large" disabled>
                                    <i class="mdi mdi-check-circle"></i>
                                    Evento Finalizado
                                </button>
                            }

                            <a href="/EventosUniversitarios/Index" class="btn-modern btn-outline">
                                <i class="mdi mdi-arrow-left"></i>
                                Volver a Eventos
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Info adicional universitaria -->
                <div class="info-cards">
                    <div class="info-card">
                        <div class="info-icon">
                            <i class="mdi mdi-certificate"></i>
                        </div>
                        <div class="info-content">
                            <h5>Certificación</h5>
                            <p>Recibe certificado oficial de participación</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">
                            <i class="mdi mdi-book-open"></i>
                        </div>
                        <div class="info-content">
                            <h5>Material Incluido</h5>
                            <p>Acceso a recursos y material educativo</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">
                            <i class="mdi mdi-account-group"></i>
                        </div>
                        <div class="info-content">
                            <h5>Networking</h5>
                            <p>Conecta con estudiantes y profesionales</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">
                            <i class="mdi mdi-headset"></i>
                        </div>
                        <div class="info-content">
                            <h5>Soporte</h5>
                            <p>Asistencia durante todo el evento</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

