@model Proyecto_PrograAvanzadaWeb.Models.EventoSocialViewModel
@{
    ViewData["Title"] = "Editar Evento Social";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="eventos-container">
    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="mdi mdi-check-circle me-2"></i>
            @TempData["Exito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="mdi mdi-alert-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="mdi mdi-pencil me-2"></i>
                Editar Evento Social
            </h1>
            <p class="page-subtitle">Modifica los detalles del evento social</p>
        </div>
        <div class="header-actions">
            <a href="/EventosSociales" class="btn-modern btn-secondary">
                <i class="mdi mdi-arrow-left"></i>
                Volver a la Lista
            </a>
        </div>
    </div>

    <div class="form-card">
        <div class="card-header">
            <h3><i class="mdi mdi-form-textbox"></i> Información del Evento</h3>
            <p>Completa todos los campos requeridos para actualizar el evento</p>
        </div>
        <div class="card-body">
            <form asp-action="EditarEvento" method="post" class="evento-form">
                @Html.HiddenFor(m => m.IdEventoSocial)

                <div class="form-section">
                    <h4 class="section-title">
                        <i class="mdi mdi-information-outline"></i>
                        Información Básica
                    </h4>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">
                                <i class="mdi mdi-format-title"></i>
                                Nombre del Evento
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Festival de Música" />
                            <span asp-validation-for="Nombre" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Ubicacion" class="form-label">
                                <i class="mdi mdi-map-marker"></i>
                                Ubicación
                            </label>
                            <input asp-for="Ubicacion" class="form-control" placeholder="Ej: Parque Central" />
                            <span asp-validation-for="Ubicacion" class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Descripcion" class="form-label">
                            <i class="mdi mdi-text"></i>
                            Descripción del Evento
                        </label>
                        <textarea asp-for="Descripcion" class="form-control" rows="4"
                                  placeholder="Describe detalladamente el evento social..."></textarea>
                        <span asp-validation-for="Descripcion" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-section">
                    <h4 class="section-title">
                        <i class="mdi mdi-calendar-clock"></i>
                        Fechas y Horarios
                    </h4>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FechaInicio" class="form-label">
                                <i class="mdi mdi-calendar-start"></i>
                                Fecha de Inicio
                            </label>
                            <input asp-for="FechaInicio" type="datetime-local" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FechaFin" class="form-label">
                                <i class="mdi mdi-calendar-end"></i>
                                Fecha de Finalización
                            </label>
                            <input asp-for="FechaFin" type="datetime-local" class="form-control" />
                            <span asp-validation-for="FechaFin" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h4 class="section-title">
                        <i class="mdi mdi-account-details"></i>
                        Detalles Adicionales
                    </h4>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="CantidadPersonas" class="form-label">
                                <i class="mdi mdi-account-group"></i>
                                Cantidad de Personas
                            </label>
                            <input asp-for="CantidadPersonas" type="number" min="1" class="form-control"
                                   placeholder="Ej: 50" />
                            <span asp-validation-for="CantidadPersonas" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Precio" class="form-label">
                                <i class="mdi mdi-currency-usd"></i>
                                Precio
                            </label>
                            <input asp-for="Precio" type="number" step="0.01" min="0" class="form-control"
                                   placeholder="Ej: 25.00" />
                            <span asp-validation-for="Precio" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-modern btn-primary btn-large">
                        <i class="mdi mdi-content-save"></i>
                        Guardar Cambios
                    </button>
                    <a href="/EventosSociales" class="btn-modern btn-secondary btn-large">
                        <i class="mdi mdi-cancel"></i>
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null)
    {
        <div class="preview-card">
            <div class="card-header">
                <h3><i class="mdi mdi-eye"></i> Vista Previa</h3>
                <p>Así se verá tu evento en la lista principal</p>
            </div>
            <div class="card-body">
                <div class="evento-preview">
                    <div class="evento-card">
                        <div class="evento-header">
                            <div class="evento-badge">
                                <i class="mdi mdi-account-multiple"></i>
                            </div>
                            <div class="evento-status">
                                <span class="status-badge status-upcoming">
                                    <i class="mdi mdi-clock-outline"></i>
                                    Próximo
                                </span>
                            </div>
                        </div>

                        <div class="evento-content">
                            <h3 class="evento-title">@(Model.Nombre ?? "Nombre del Evento")</h3>
                            <div class="evento-ubicacion">
                                <i class="mdi mdi-map-marker-outline"></i>
                                @(Model.Ubicacion ?? "Ubicación")
                            </div>

                            <div class="evento-description">
                                @(Model.Descripcion ?? "Descripción del evento...")
                            </div>

                            <div class="evento-info-grid">
                                <div class="info-item">
                                    <i class="mdi mdi-calendar-start"></i>
                                    <div class="info-details">
                                        <span class="info-label">Inicio</span>
                                        <span class="info-value">@(Model.FechaInicioFormateada ?? "Fecha de inicio")</span>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="mdi mdi-calendar-end"></i>
                                    <div class="info-details">
                                        <span class="info-label">Fin</span>
                                        <span class="info-value">@(Model.FechaFinFormateada ?? "Fecha de fin")</span>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="mdi mdi-account-group"></i>
                                    <div class="info-details">
                                        <span class="info-label">Personas</span>
                                        <span class="info-value">@(Model.CantidadPersonas.ToString() ?? "0")</span>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="mdi mdi-account-circle"></i>
                                    <div class="info-details">
                                        <span class="info-label">Creador</span>
                                        <span class="info-value">@(Model.NombreCreador ?? "Tu nombre")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="evento-price">
                                <span class="price-amount">@(Model.PrecioFormateado ?? "₡0.00")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
