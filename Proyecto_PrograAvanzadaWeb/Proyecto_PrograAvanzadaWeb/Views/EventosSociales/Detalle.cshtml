@model Proyecto_PrograAvanzadaWeb.Models.EventoSocialViewModel
@{
    ViewData["Title"] = "Detalle del Evento Social";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="detalle-container">
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="mdi mdi-alert-circle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="mdi mdi-information me-2"></i>
            @ViewBag.Mensaje
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header del evento -->
    <div class="evento-hero">
        <div class="hero-background">
            <div class="hero-overlay"></div>
            <div class="hero-pattern"></div>
        </div>

        <div class="hero-content">
            <div class="breadcrumb-nav">
                <a href="/EventosSociales/Sociales" class="breadcrumb-link">
                    <i class="mdi mdi-account-multiple"></i> Eventos Sociales
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">@Model.Nombre</span>
            </div>

            <div class="evento-status-hero">
                <span class="status-badge-hero status-@(Model.EventoTerminado ? "finished" : Model.EsEventoEnCurso ? "active" : "upcoming")">
                    <i class="mdi @(Model.EventoTerminado ? "mdi-check-circle" : Model.EsEventoEnCurso ? "mdi-play-circle" : "mdi-clock-outline")"></i>
                    @Model.EstadoEvento
                </span>
            </div>

            <h1 class="evento-title-hero">@Model.Nombre</h1>

            <div class="evento-ubicacion-hero">
                <i class="mdi mdi-map-marker-outline"></i>
                @Model.Ubicacion
            </div>

            <div class="evento-meta-hero">
                <div class="meta-item">
                    <i class="mdi mdi-calendar-start"></i>
                    <span>@Model.FechaInicioFormateada</span>
                </div>
                <div class="meta-item">
                    <i class="mdi mdi-account-group"></i>
                    <span>@Model.CantidadPersonas personas</span>
                </div>
                <div class="meta-item">
                    <i class="mdi mdi-account-circle"></i>
                    <span>@Model.NombreCreador</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="detalle-content">
        <div class="content-grid">
            <!-- Información principal -->
            <div class="main-info">
                <div class="info-card">
                    <div class="card-header">
                        <h3><i class="mdi mdi-information-outline"></i> Descripción del Evento</h3>
                    </div>
                    <div class="card-body">
                        <p class="evento-description-detail">@Model.Descripcion</p>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-header">
                        <h3><i class="mdi mdi-calendar-clock"></i> Información de Fechas</h3>
                    </div>
                    <div class="card-body">
                        <div class="dates-grid">
                            <div class="date-item">
                                <div class="date-icon">
                                    <i class="mdi mdi-calendar-start"></i>
                                </div>
                                <div class="date-info">
                                    <span class="date-label">Fecha de Inicio</span>
                                    <span class="date-value">@Model.FechaInicioFormateada</span>
                                </div>
                            </div>
                            <div class="date-item">
                                <div class="date-icon">
                                    <i class="mdi mdi-calendar-end"></i>
                                </div>
                                <div class="date-info">
                                    <span class="date-label">Fecha de Finalización</span>
                                    <span class="date-value">@Model.FechaFinFormateada</span>
                                </div>
                            </div>
                            <div class="date-item">
                                <div class="date-icon">
                                    <i class="mdi mdi-clock-outline"></i>
                                </div>
                                <div class="date-info">
                                    <span class="date-label">Duración</span>
                                    <span class="date-value">@Model.DuracionEnHoras hora@(Model.DuracionEnHoras != 1 ? "s" : "")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-header">
                        <h3><i class="mdi mdi-account-details"></i> Detalles del Organizador</h3>
                    </div>
                    <div class="card-body">
                        <div class="organizer-info">
                            <div class="organizer-avatar">
                                <i class="mdi mdi-account-circle"></i>
                            </div>
                            <div class="organizer-details">
                                <h4>@Model.NombreCreador</h4>
                                <p class="organizer-role">Organizador del Evento</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel lateral -->
            <div class="sidebar-info">
                <!-- Precio y reserva -->
                <div class="price-card">
                    <div class="price-header">
                        <div class="price-amount">@Model.PrecioFormateado</div>
                        <div class="price-label">por persona</div>
                    </div>

                    <div class="capacity-info">
                        <div class="capacity-item">
                            <i class="mdi mdi-account-group"></i>
                            <span>Capacidad: @Model.CantidadPersonas personas</span>
                        </div>
                    </div>

                    @if (!Model.EventoTerminado)
                    {
                        <div class="booking-actions">
                            @if (!Model.EsEventoEnCurso)
                            {
                                <button class="btn-modern btn-primary btn-book" onclick="reservarEvento(@Model.IdEventoSocial)">
                                    <i class="mdi mdi-calendar-check"></i>
                                    Reservar Lugar
                                </button>
                            }
                            else
                            {
                                <button class="btn-modern btn-info" disabled>
                                    <i class="mdi mdi-play-circle"></i>
                                    Evento en Curso
                                </button>
                            }

                            <button class="btn-modern btn-outline" onclick="compartirEvento()">
                                <i class="mdi mdi-share-variant"></i>
                                Compartir
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="booking-actions">
                            <button class="btn-modern btn-secondary" disabled>
                                <i class="mdi mdi-check-circle"></i>
                                Evento Finalizado
                            </button>
                        </div>
                    }
                </div>

                <!-- Información adicional -->
                <div class="additional-info">
                    <div class="info-header">
                        <h4><i class="mdi mdi-information-variant"></i> Información Adicional</h4>
                    </div>
                    <div class="info-list">
                        <div class="info-list-item">
                            <i class="mdi mdi-map-marker-radius"></i>
                            <div class="info-text">
                                <span class="info-title">Ubicación</span>
                                <span class="info-description">@Model.Ubicacion</span>
                            </div>
                        </div>
                        <div class="info-list-item">
                            <i class="mdi mdi-calendar-today"></i>
                            <div class="info-text">
                                <span class="info-title">Estado</span>
                                <span class="info-description">@Model.EstadoEvento</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navegación -->
                <div class="navigation-card">
                    <a href="/EventosSociales/Sociales" class="btn-modern btn-secondary btn-full">
                        <i class="mdi mdi-arrow-left"></i>
                        Volver a Eventos
                    </a>

                    @if (Context.Session.GetString("NombreRol") == "Usuario Administrador")
                    {
                        <div class="admin-actions">
                            <a href="/EventosSociales/EditarEvento/@Model.IdEventoSocial" class="btn-modern btn-warning">
                                <i class="mdi mdi-pencil"></i>
                                Editar
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

