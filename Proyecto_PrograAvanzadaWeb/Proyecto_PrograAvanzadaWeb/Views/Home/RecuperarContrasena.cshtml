<!-- Vista: Views/Home/RecuperarContrasena.cshtml -->
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_LayoutExterno";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh">
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="card card-default mb-0">
                    <div class="card-header pb-0">
                        <div class="app-brand w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" href="/">
                                <span class="brand-name text-dark">Tico Tours</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body px-5 pb-5 pt-0">
                        <h4 class="text-dark mb-4 text-center">Recuperar Contraseña</h4>
                        <p class="text-center mb-4">Ingresa tu correo electrónico y te enviaremos instrucciones para restablecer tu contraseña.</p>

                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="mdi mdi-alert-circle me-2"></i>
                                @ViewBag.Error
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(ViewBag.Exito))
                        {
                            <div class="alert alert-success" role="alert">
                                <i class="mdi mdi-check-circle me-2"></i>
                                @ViewBag.Exito
                            </div>
                        }

                        <form method="post" action="@Url.Action("RecuperarContrasena", "Home")">
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <input type="email" class="form-control input-lg" name="correo" id="correo"
                                           placeholder="Correo electrónico" required>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-pill mb-3" style="background-color: #10b981; color: white; width: 100%;">
                                        <i class="mdi mdi-email"></i>
                                        Enviar Instrucciones
                                    </button>
                                    <div class="text-center">
                                        <a href="@Url.Action("Index", "Home")" class="text-muted font-weight-medium">
                                            <i class="mdi mdi-arrow-left"></i>
                                            Volver al inicio de sesión
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

