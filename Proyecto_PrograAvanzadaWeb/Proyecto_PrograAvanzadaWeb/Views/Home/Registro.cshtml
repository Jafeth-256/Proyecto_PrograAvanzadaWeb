@{
    ViewData["Title"] = "Registro";
    Layout = "_LayoutExterno";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh">
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="card card-default mb-0">
                    <div class="card-header pb-0">
                        <div class="app-brand w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" href="/">
                                <span class="brand-name text-dark">Tico Tours</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body px-5 pb-5 pt-0">
                        <h4 class="text-dark mb-4 text-center">Únete a nosotros!</h4>

                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(ViewBag.Exito))
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewBag.Exito
                            </div>
                        }

                        <form method="post" action="@Url.Action("Registro", "Home")">
                            <div class="row">
                                <div class="form-group col-md-12 mb-3">
                                    <input type="text" class="form-control input-lg" name="nombre" id="nombre"
                                           placeholder="Nombre completo" required maxlength="255">
                                </div>
                                <div class="form-group col-md-12 mb-3">
                                    <input type="email" class="form-control input-lg" name="correo" id="correo"
                                           placeholder="Correo electrónico" required maxlength="100">
                                </div>
                                <div class="form-group col-md-12 mb-3">
                                    <input type="text" class="form-control input-lg" name="identificacion" id="identificacion"
                                           placeholder="Identificación" required maxlength="20">
                                </div>
                                <div class="form-group col-md-12 mb-3">
                                    <input type="password" class="form-control input-lg" name="Contrasenna"
                                           id="Contrasenna" placeholder="Contraseña" required minlength="6">
                                </div>
                                <div class="form-group col-md-12 mb-4">
                                    <input type="password" class="form-control input-lg" name="confirmContrasenna"
                                           id="confirmContrasenna" placeholder="Confirmar contraseña" required minlength="6">
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-pill mb-3" style="background-color: #6c757d; color: white; width: 100%;">
                                        Registrarse
                                    </button>
                                    <div class="text-center">
                                        <a href="@Url.Action("Index", "Home")" class="text-muted font-weight-medium">¿Ya tienes cuenta? Inicia sesión aquí</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
