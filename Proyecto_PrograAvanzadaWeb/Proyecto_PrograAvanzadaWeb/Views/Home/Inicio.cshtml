<script>
    // Actualizar el nombre del usuario en el header
    document.addEventListener('DOMContentLoaded', function() {
        const userName = '@ViewBag.NombreUsuario';
        if (userName) {
            const userNameElement = document.querySelector('.user-profile div:nth-child(3) div:first-child');
            if (userNameElement) {
                userNameElement.textContent = userName.split(' ')[0]; // Solo el primer nombre
            }

            // También actualizar el saludo en el hero
            const heroTitle = document.querySelector('.hero-title');
            if (heroTitle) {
                heroTitle.textContent = `¡Hola ${userName.split(' ')[0]}!`;
            }
        }
    });

    // Función para cambiar tabs
    function switchTab(tabName) {
        // Remover clase active de todos los botones y contenidos
        document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));

        // Agregar clase active al botón clickeado
        event.target.classList.add('active');

        // Mostrar el contenido correspondiente
        document.getElementById(tabName).classList.add('active');
    }

    // Funcionalidad del calendario
    document.querySelectorAll('.calendar-day').forEach(day => {
        if (day.textContent) {
            day.addEventListener('click', function() {
                // Remover selección previa (excepto today)
                document.querySelectorAll('.calendar-day.selected').forEach(selected => {
                    selected.classList.remove('selected');
                });

                // Agregar selección al día clickeado (si no es today)
                if (!this.classList.contains('today')) {
                    this.classList.add('selected');
                }
            });
        }
    });
</script>