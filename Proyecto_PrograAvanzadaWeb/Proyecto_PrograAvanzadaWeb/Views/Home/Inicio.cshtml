        color: var(--gray-900);
        margin: 0 0 4px 0;
    }

    .location-country {
        font-size: 0.9rem;
        color: var(--gray-600);
        margin: 0;
    }

    .location-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #10b981;
        margin: 0;
    }

    /* Calendar styles */
    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 8px;
        margin-top: 20px;
    }

    .calendar-header {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 8px;
        margin-bottom: 15px;
    }

    .calendar-day-header {
        text-align: center;
        font-weight: 600;
        color: var(--gray-600);
        font-size: 0.85rem;
        padding: 8px 0;
    }

    .calendar-day {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
        color: var(--gray-700);
    }

        .calendar-day:hover {
            background: var(--gray-100);
        }

        .calendar-day.today {
            background: var(--primary-color);
            color: white;
            font-weight: 700;
        }

        .calendar-day.selected {
            background: #10b981;
            color: white;
            font-weight: 700;
        }

    .calendar-month-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .calendar-month-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--gray-900);
    }

    .calendar-nav-btn {
        background: var(--gray-100);
