        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .evento-price {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border: 2px solid #a7f3d0;
        border-radius: 15px;
        padding: 25px;
        text-align: center;
    }

    .price-currency {
        font-size: 1.2rem;
        color: #059669;
        font-weight: 600;
    }

    .price-amount {
        font-size: 1.8rem;
        color: #065f46;
        font-weight: 700;
        margin-left: 5px;
    }

    .price-label {
        display: block;
        font-size: 0.9rem;
        color: #059669;
        margin-top: 5px;
        font-weight: 500;
    }

    /* Info grid */
    .evento-info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
