        }

    .card-body {
        padding: 30px;
    }

    /* Evento hero */
    .evento-hero {
        margin-bottom: 30px;
    }

    .evento-header {
        text-align: center;
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        padding: 30px;
        border-radius: 20px;
        color: white;
        margin-bottom: 20px;
    }

    .evento-badge {
        width: 60px;
        height: 60px;
