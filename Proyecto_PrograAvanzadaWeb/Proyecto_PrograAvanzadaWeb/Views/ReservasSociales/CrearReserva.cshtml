@model Proyecto_PrograAvanzadaWeb.Models.CrearReservaSocialViewModel
@{
    ViewData["Title"] = "Crear Reserva de Evento Social";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reserva-container">
    <!-- Mensajes de error -->
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="mdi mdi-alert-circle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header de la página -->
    <div class="page-header">
        <div class="header-content">
            <div class="breadcrumb-nav">
                <a href="/ReservasSociales/Explorar" class="breadcrumb-link">
                    <i class="mdi mdi-calendar-star"></i> Explorar Eventos
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">Crear Reserva</span>
            </div>
            <h1 class="page-title">
                <i class="mdi mdi-calendar-plus me-2"></i>
                Crear Reserva
            </h1>
            <p class="page-subtitle">Completa tu reserva para este increíble evento social</p>
        </div>
        <div class="header-stats">
            <div class="stat-badge">
                <i class="mdi mdi-ticket-confirmation"></i>
                <span class="stat-label">Nueva Reserva</span>
            </div>
        </div>
    </div>

    <div class="content-grid">
        <!-- Información del Evento -->
        <div class="main-content">
            <div class="table-card">
                <div class="card-header">
                    <h3><i class="mdi mdi-information-outline"></i> Información del Evento</h3>
                    <p>Detalles del evento seleccionado para tu reserva</p>
                </div>
                <div class="card-body">
                    <div class="evento-summary">
                        <div class="evento-hero">
                            <div class="evento-header">
                                <div class="evento-badge">
                                    <i class="mdi mdi-calendar-star"></i>
                                </div>
                                <div class="evento-title">@Model.Evento.Nombre</div>
                                <div class="evento-ubicacion">
                                    <i class="mdi mdi-map-marker-outline"></i>
                                    @Model.Evento.Ubicacion
                                </div>
                            </div>

                            <div class="evento-price">
                                <span class="price-currency">₡</span>
                                <span class="price-amount">@Model.Evento.PrecioFormateado</span>
                                <span class="price-label">por persona</span>
                            </div>
                        </div>

                        <div class="evento-info-grid">
                            <div class="info-item">
                                <i class="mdi mdi-calendar-range"></i>
                                <div class="info-details">
                                    <span class="info-label">Fechas</span>
                                    <span class="info-value">@Model.Evento.FechaInicioFormateada - @Model.Evento.FechaFinFormateada</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="mdi mdi-clock-outline"></i>
                                <div class="info-details">
                                    <span class="info-label">Duración</span>
                                    <span class="info-value">@Model.Evento.DuracionEnDias día@(Model.Evento.DuracionEnDias != 1 ? "s" : "")</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="mdi mdi-account-circle"></i>
                                <div class="info-details">
                                    <span class="info-label">Organizador</span>
                                    <span class="info-value">@Model.Evento.NombreCreador</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="mdi mdi-account-group"></i>
                                <div class="info-details">
                                    <span class="info-label">Capacidad</span>
                                    <span class="info-value">@Model.Evento.CantidadPersonas personas</span>
                                </div>
                            </div>
                        </div>

                        <div class="availability-section">
                            <h4 class="section-title">
                                <i class="mdi mdi-chart-donut"></i>
                                Disponibilidad Actual
                            </h4>
                            <div class="availability-details">
                                <div class="availability-text">
                                    <span><strong>@Model.Evento.CuposDisponibles</strong> de @Model.Evento.CantidadPersonas cupos disponibles</span>
                                    <span class="percentage">@Model.Evento.PorcentajeOcupacion.ToString("F0")% ocupado</span>
                                </div>
                                <div class="availability-bar">
                                    <div class="availability-fill" style="width: @Model.Evento.PorcentajeOcupacion%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="evento-description">
                            <h4 class="section-title">
                                <i class="mdi mdi-text"></i>
                                Descripción
                            </h4>
                            <div class="description-content">
                                @Html.Raw(Model.Evento.Descripcion.Replace("\n", "<br>"))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulario de Reserva -->
        <div class="sidebar-content">
            <div class="table-card">
                <div class="card-header">
                    <h3><i class="mdi mdi-form-select"></i> Detalles de Reserva</h3>
                    <p>Completa la información para tu reserva</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="CrearReserva" id="reservaForm">
                        <input type="hidden" asp-for="IdEventoSocial" />

                        <div class="form-section">
                            <div class="form-group">
                                <label asp-for="CantidadPersonas" class="form-label">
                                    <i class="mdi mdi-account-group"></i>
                                    Cantidad de Personas
                                </label>
                                <div class="quantity-selector">
                                    <button type="button" class="quantity-btn" id="decrease-btn">
                                        <i class="mdi mdi-minus"></i>
                                    </button>
                                    <input asp-for="CantidadPersonas"
                                           type="number"
                                           class="quantity-input"
                                           min="1"
                                           max="@Model.Evento.CuposDisponibles"
                                           value="@Model.CantidadPersonas"
                                           id="cantidad-input" />
                                    <button type="button" class="quantity-btn" id="increase-btn">
                                        <i class="mdi mdi-plus"></i>
                                    </button>
                                </div>
                                <div class="form-hint">
                                    Máximo @Model.Evento.CuposDisponibles persona@(Model.Evento.CuposDisponibles != 1 ? "s" : "") disponible@(Model.Evento.CuposDisponibles != 1 ? "s" : "")
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Comentarios" class="form-label">
                                    <i class="mdi mdi-message-text-outline"></i>
                                    Comentarios o Solicitudes Especiales
                                </label>
                                <textarea asp-for="Comentarios"
                                          class="form-control"
                                          rows="4"
                                          placeholder="Escribe aquí cualquier comentario o solicitud especial..."></textarea>
                                <div class="form-hint">
                                    Opcional: Menciona cualquier requerimiento especial, alergias alimentarias, etc.
                                </div>
                            </div>
                        </div>

                        <div class="calculation-section">
                            <h4 class="section-title">
                                <i class="mdi mdi-calculator"></i>
                                Resumen de Costos
                            </h4>
                            <div class="cost-breakdown">
                                <div class="cost-item">
                                    <span>Precio por persona:</span>
                                    <span id="precio-unitario">@Model.Evento.PrecioFormateado</span>
                                </div>
                                <div class="cost-item">
                                    <span>Cantidad de personas:</span>
                                    <span id="cantidad-display">@Model.CantidadPersonas</span>
                                </div>
                                <div class="cost-separator"></div>
                                <div class="cost-total">
                                    <span>Total a pagar:</span>
                                    <span id="precio-total">₡@((Model.Evento.Precio * Model.CantidadPersonas).ToString("N0"))</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-modern btn-primary btn-large" id="submit-btn">
                                <i class="mdi mdi-calendar-check"></i>
                                Confirmar Reserva
                            </button>
                            <a href="/ReservasSociales/Detalle/@Model.IdEventoSocial" class="btn-modern btn-outline">
                                <i class="mdi mdi-arrow-left"></i>
                                Volver al Evento
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="info-cards-section">
                <div class="info-card">
                    <div class="info-icon">
                        <i class="mdi mdi-shield-check"></i>
                    </div>
                    <div class="info-content">
                        <h5>Reserva Segura</h5>
                        <p>Tu información está protegida y encriptada</p>
                    </div>
                </div>

                <div class="info-card">
                    <div class="info-icon">
                        <i class="mdi mdi-calendar-clock"></i>
                    </div>
                    <div class="info-content">
                        <h5>Cancelación Flexible</h5>
                        <p>Cancela hasta 24 horas antes sin costo</p>
                    </div>
                </div>

                <div class="info-card">
                    <div class="info-icon">
                        <i class="mdi mdi-email-fast"></i>
                    </div>
                    <div class="info-content">
                        <h5>Confirmación Inmediata</h5>
                        <p>Recibirás la confirmación por email al instante</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

