<script>
    document.addEventListener('DOMContentLoaded', function() {
        const cantidadInput = document.getElementById('cantidad-input');
        const decreaseBtn = document.getElementById('decrease-btn');
        const increaseBtn = document.getElementById('increase-btn');
        const cantidadDisplay = document.getElementById('cantidad-display');
        const precioTotal = document.getElementById('precio-total');
        const submitBtn = document.getElementById('submit-btn');

        const precioUnitario = @Model.Evento.Precio;
        const maxCupos = @Model.Evento.CuposDisponibles;

        function actualizarCalculos() {
            const cantidad = parseInt(cantidadInput.value) || 1;
            const total = precioUnitario * cantidad;

            cantidadDisplay.textContent = cantidad;
            precioTotal.textContent = `₡${total.toLocaleString()}`;

            decreaseBtn.disabled = cantidad <= 1;
            increaseBtn.disabled = cantidad >= maxCupos;

            // Actualizar color de los botones según estado
            if (cantidad <= 1) {
                decreaseBtn.style.opacity = '0.4';
            } else {
                decreaseBtn.style.opacity = '1';
            }

            if (cantidad >= maxCupos) {
                increaseBtn.style.opacity = '0.4';
            } else {
                increaseBtn.style.opacity = '1';
            }
        }

        function cambiarCantidad(incremento) {
            let cantidad = parseInt(cantidadInput.value) || 1;
            cantidad += incremento;

            if (cantidad < 1) cantidad = 1;
            if (cantidad > maxCupos) cantidad = maxCupos;

            cantidadInput.value = cantidad;
            actualizarCalculos();

            // Efecto visual en el botón
            const btn = incremento > 0 ? increaseBtn : decreaseBtn;
            btn.style.transform = 'scale(0.9)';
            setTimeout(() => {
                btn.style.transform = 'scale(1)';
            }, 150);
        }

        // Event listeners
        decreaseBtn.addEventListener('click', () => cambiarCantidad(-1));
        increaseBtn.addEventListener('click', () => cambiarCantidad(1));
        cantidadInput.addEventListener('input', actualizarCalculos);

        // Validación del formulario
        document.getElementById('reservaForm').addEventListener('submit', function(e) {
            const cantidad = parseInt(cantidadInput.value);

            if (cantidad < 1 || cantidad > maxCupos) {
                e.preventDefault();
                alert(`La cantidad debe estar entre 1 y ${maxCupos} personas.`);
                return;
            }

            // Deshabilitar botón y mostrar loading
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="mdi mdi-loading mdi-spin"></i> Procesando Reserva...';

            // Añadir clase de loading
            submitBtn.style.opacity = '0.8';
        });

        // Animaciones de entrada
        const cards = document.querySelectorAll('.table-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.6s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 200);
        });

        // Animación para las info cards
        const infoCards = document.querySelectorAll('.info-card');
        infoCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateX(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateX(0)';
            }, 800 + (index * 100));
        });

        // Animación de la barra de disponibilidad
        const availabilityFill = document.querySelector('.availability-fill');
        if (availabilityFill) {
            const targetWidth = availabilityFill.style.width;
            availabilityFill.style.width = '0%';
            setTimeout(() => {
                availabilityFill.style.transition = 'width 1s ease-out';
                availabilityFill.style.width = targetWidth;
            }, 600);
        }

        // Inicializar cálculos
        actualizarCalculos();

        // Auto-hide alerts después de 5 segundos
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.style.transition = 'opacity 0.5s ease';
                    alert.style.opacity = '0';
                    setTimeout(() => {
                        alert.remove();
                    }, 500);
                }
            }, 5000);
        });

        // Efecto focus en textarea
        const textarea = document.querySelector('textarea');
        if (textarea) {
            textarea.addEventListener('focus', function() {
                this.parentElement.style.transform = 'scale(1.02)';
                this.parentElement.style.transition = 'transform 0.3s ease';
            });

            textarea.addEventListener('blur', function() {
                this.parentElement.style.transform = 'scale(1)';
            });
        }

        // Validación en tiempo real del input de cantidad
        cantidadInput.addEventListener('keypress', function(e) {
            // Solo permitir números
            if (!/[0-9]/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Enter'].includes(e.key)) {
                e.preventDefault();
            }
        });

        // Prevenir valores fuera de rango al pegar
        cantidadInput.addEventListener('paste', function(e) {
            setTimeout(() => {
                const value = parseInt(this.value);
                if (value < 1) this.value = 1;
                if (value > maxCupos) this.value = maxCupos;
                actualizarCalculos();
            }, 10);
        });
    });
</script>