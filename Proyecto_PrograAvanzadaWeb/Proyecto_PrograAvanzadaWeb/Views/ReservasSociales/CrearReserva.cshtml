        border-radius: 15px;
        padding: 20px 25px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.3);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

        .stat-badge i {
            font-size: 2rem;
            color: white;
        }

    .stat-label {
        display: block;
        font-size: 0.85rem;
        opacity: 0.9;
        font-weight: 500;
    }

    /* Grid de contenido */
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        margin-bottom: 30px;
    }

    /* Cards - mismo estilo que tours */
    .table-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        margin-bottom: 30px;
    }

    .card-header {
