        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .card-header {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 20px 25px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

        .card-header h3 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 600;
            color: #374151;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .card-header h3 i {
                color: #f59e0b;
            }

    .card-body {
        padding: 25px;
    }

    .filters-content {
        display: grid;
        grid-template-columns: 2fr 1fr auto;
        gap: 20px;
        align-items: end;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .filter-label {
        font-weight: 600;
        color: #374151;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .filter-label i {
            color: #f59e0b;
            font-size: 1rem;
        }

    .form-control-modern {
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95rem;
        background: white;
        transition: all 0.3s ease;
        font-family: inherit;
    }

        .form-control-modern:focus {
            outline: none;
            border-color: #f59e0b;
            box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
        }

    /* Reservas Grid */
    .reservas-content {
        padding: 0 20px;
    }

    .reservas-grid {
        display: grid;
        gap: 25px;
    }

    .reserva-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .reserva-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }

    .reserva-header {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 20px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .reserva-badge {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

    .status-badge-card {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }

        .status-badge-card.status-pendiente {
            background: #fef3c7;
            color: #92400e;
            border: 1px solid #fbbf24;
        }

        .status-badge-card.status-confirmada {
            background: #dcfce7;
            color: #166534;
            border: 1px solid #22c55e;
        }

        .status-badge-card.status-cancelada {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #ef4444;
        }

    .reserva-main {
        padding: 25px;
    }

    .evento-info {
        margin-bottom: 25px;
    }

    .evento-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #374151;
        margin: 0 0 10px 0;
    }

    .evento-location {
        color: #6b7280;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .evento-location i {
            color: #f59e0b;
            font-size: 1.1rem;
        }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: #f9fafb;
        border-radius: 12px;
        border-left: 4px solid #f59e0b;
    }

    .detail-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.1rem;
        flex-shrink: 0;
    }

    .detail-content {
        display: flex;
        flex-direction: column;
    }

    .detail-label {
        font-size: 0.8rem;
        color: #6b7280;
        font-weight: 500;
        margin-bottom: 2px;
    }

    .detail-value {
        font-size: 0.95rem;
        color: #374151;
        font-weight: 600;
    }

    .comentarios-section {
        background: #fffbeb;
        border: 1px solid #fed7aa;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .comentarios-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
        font-weight: 600;
        color: #92400e;
        font-size: 0.95rem;
    }

        .comentarios-header i {
            font-size: 1.1rem;
        }

    .comentarios-text {
        margin: 0;
        color: #78350f;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .organizador-section {
        border-top: 1px solid #f3f4f6;
        padding-top: 20px;
    }

    .organizador-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .organizador-avatar {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .organizador-details {
        display: flex;
        flex-direction: column;
    }

    .organizador-label {
        font-size: 0.8rem;
        color: #6b7280;
        font-weight: 500;
    }

    .organizador-name {
        font-size: 0.95rem;
        color: #374151;
        font-weight: 600;
    }

    .reserva-footer {
        background: #f8fafc;
        padding: 20px 25px;
        border-top: 1px solid rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .precio-section {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .precio-label {
        font-size: 0.85rem;
        color: #6b7280;
        font-weight: 500;
    }

    .precio-amount {
        font-size: 1.3rem;
        color: #f59e0b;
        font-weight: 700;
    }

    .reserva-actions {
        display: flex;
        gap: 10px;
    }

    /* Buttons */
    .btn-modern {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 16px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0,0,0,0.10);
        text-align: center;
        justify-content: center;
        font-family: inherit;
    }

        .btn-modern.btn-primary {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        .btn-modern.btn-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .btn-modern.btn-outline {
            background: white;
            color: #6b7280;
            border: 2px solid #e5e7eb;
        }

        .btn-modern.btn-large {
            padding: 15px 25px;
            font-size: 1rem;
        }

        .btn-modern:hover:not(:disabled) {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            text-decoration: none;
        }

        .btn-modern.btn-primary:hover {
            color: white;
        }

        .btn-modern.btn-danger:hover {
            color: white;
        }

        .btn-modern.btn-outline:hover {
            background: #f3f4f6;
            color: #374151;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
    }

    .empty-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        color: white;
        font-size: 2.5rem;
    }

    .empty-title {
        font-size: 1.5rem;
        color: #374151;
        font-weight: 600;
        margin: 0 0 15px 0;
    }

    .empty-subtitle {
        color: #6b7280;
        font-size: 1rem;
        margin: 0 0 30px 0;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Alerts */
    .alert {
        background: #fef2f2;
        border: 1px solid #fecaca;
        color: #dc2626;
        padding: 15px 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 500;
    }

    .alert-success {
        background: #f0fdf4;
        border-color: #bbf7d0;
        color: #166534;
    }

