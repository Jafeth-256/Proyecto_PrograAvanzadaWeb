        .page-title-hero

    {
        font-size: 1.8rem;
    }

    .evento-title {
        font-size: 1.2rem;
    }

    .precio-amount {
        font-size: 1.1rem;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const filtroBusqueda = document.getElementById('filtro-busqueda');
        const filtroEstado = document.getElementById('filtro-estado');
        const limpiarFiltros = document.getElementById('limpiar-filtros');
        const reservasGrid = document.getElementById('reservas-grid');

        function aplicarFiltros() {
            const busqueda = filtroBusqueda.value.toLowerCase();
            const estado = filtroEstado.value;

            const cards = reservasGrid.querySelectorAll('.reserva-card');

            cards.forEach(card => {
                const evento = card.dataset.evento || '';
                const ubicacion = card.dataset.ubicacion || '';
                const estadoCard = card.dataset.estado || '';

                const coincideBusqueda = busqueda === '' ||
                                       evento.includes(busqueda) ||
                                       ubicacion.includes(busqueda);

                const coincideEstado = estado === '' || estadoCard === estado;

                if (coincideBusqueda && coincideEstado) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        if (filtroBusqueda) filtroBusqueda.addEventListener('input', aplicarFiltros);
        if (filtroEstado) filtroEstado.addEventListener('change', aplicarFiltros);

        if (limpiarFiltros) {
            limpiarFiltros.addEventListener('click', function() {
                filtroBusqueda.value = '';
                filtroEstado.value = '';
                aplicarFiltros();
            });
        }

        // Animaciones de entrada
        const reservaCards = document.querySelectorAll('.reserva-card');
        const filtersCard = document.querySelector('.filters-card');

        // Animar filtros
        if (filtersCard) {
            filtersCard.style.opacity = '0';
            filtersCard.style.transform = 'translateY(20px)';
            setTimeout(() => {
                filtersCard.style.transition = 'all 0.5s ease';
                filtersCard.style.opacity = '1';
                filtersCard.style.transform = 'translateY(0)';
            }, 100);
        }

        // Animar cards de reservas
        reservaCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, (index * 100) + 200);
        });

        // Auto-hide alerts
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.style.transition = 'opacity 0.3s ease';
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 300);
                }
            }, 5000);
        });
    });

    function cancelarReserva(idReserva) {
        if (confirm('¿Estás seguro de que deseas cancelar esta reserva?')) {
            // Mostrar loading en el botón
            const button = event.target.closest('button');
            const originalContent = button.innerHTML;
            button.innerHTML = '<i class="mdi mdi-loading mdi-spin"></i> Cancelando...';
            button.disabled = true;

            fetch('/ReservasSociales/CancelarReserva', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `idReserva=${idReserva}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Mostrar éxito y recargar
                    button.innerHTML = '<i class="mdi mdi-check"></i> Cancelada';
                    button.classList.remove('btn-danger');
                    button.classList.add('btn-success');
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    // Restaurar botón y mostrar error
                    button.innerHTML = originalContent;
                    button.disabled = false;
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                button.innerHTML = originalContent;
                button.disabled = false;
                alert('Error al cancelar la reserva');
            });
        }
    }
</script>