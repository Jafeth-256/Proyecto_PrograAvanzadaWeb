@model List<Proyecto_PrograAvanzadaWeb.Models.ReservaSocialViewModel>
@{
    ViewData["Title"] = "Mis Reservas de Eventos Sociales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reservas-container">
    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="mdi mdi-check-circle me-2"></i>
            @TempData["Exito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="mdi mdi-alert-circle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header Hero -->
    <div class="reservas-hero">
        <div class="hero-background">
            <div class="hero-overlay"></div>
            <div class="hero-pattern"></div>
        </div>

        <div class="hero-content">
            <div class="breadcrumb-nav">
                <a href="/ReservasSociales/Explorar" class="breadcrumb-link">
                    <i class="mdi mdi-calendar-star"></i> Explorar Eventos
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">Mis Reservas</span>
            </div>

            <h1 class="page-title-hero">
                <i class="mdi mdi-bookmark-multiple me-3"></i>
                Mis Reservas de Eventos Sociales
            </h1>
            <p class="page-subtitle-hero">Gestiona todas tus reservas de eventos sociales</p>

            <div class="header-stats-hero">
                <div class="stat-badge-hero">
                    <div class="stat-number">@(Model?.Count ?? 0)</div>
                    <div class="stat-label">Reservas Totales</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
        <div class="filters-card">
            <div class="card-header">
                <h3><i class="mdi mdi-filter-variant"></i> Filtrar Reservas</h3>
            </div>
            <div class="card-body">
                <div class="filters-content">
                    <div class="filter-group">
                        <label class="filter-label">
                            <i class="mdi mdi-magnify"></i>
                            Buscar reservas
                        </label>
                        <input type="text" id="filtro-busqueda" class="form-control-modern" placeholder="Buscar por evento o ubicación...">
                    </div>
                    <div class="filter-group">
                        <label class="filter-label">
                            <i class="mdi mdi-toggle-switch"></i>
                            Estado
                        </label>
                        <select id="filtro-estado" class="form-control-modern">
                            <option value="">Todos los estados</option>
                            <option value="Pendiente">Pendiente</option>
                            <option value="Confirmada">Confirmada</option>
                            <option value="Cancelada">Cancelada</option>
                        </select>
                    </div>
                    <div class="filter-actions">
                        <button id="limpiar-filtros" class="btn-modern btn-outline">
                            <i class="mdi mdi-filter-remove"></i>
                            Limpiar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservas Content -->
    <div class="reservas-content">
        @if (Model != null && Model.Any())
        {
            <div class="reservas-grid" id="reservas-grid">
                @foreach (var reserva in Model)
                {
                    <div class="reserva-card"
                         data-evento="@reserva.NombreEvento.ToLower()"
                         data-ubicacion="@reserva.Ubicacion.ToLower()"
                         data-estado="@reserva.EstadoReserva">

                        <div class="reserva-header">
                            <div class="reserva-badge">
                                <i class="mdi mdi-ticket"></i>
                            </div>
                            <div class="reserva-status">
                                <span class="status-badge-card status-@reserva.EstadoReserva.ToLower()">
                                    <i class="mdi @(reserva.EstadoReserva == "Pendiente" ? "mdi-clock-outline" :
                                                                                          reserva.EstadoReserva == "Confirmada" ? "mdi-check-circle" : "mdi-close-circle")"></i>
                            @reserva.EstadoTexto
                        </span>
                    </div>
                </div>

                        <div class="reserva-main">
                            <div class="evento-info">
                                <h3 class="evento-title">@reserva.NombreEvento</h3>
                                <div class="evento-location">
                                    <i class="mdi mdi-map-marker-outline"></i>
                                    @reserva.Ubicacion
                                </div>
                            </div>

                            <div class="reserva-details">
                                <div class="details-grid">
                                    <div class="detail-item">
                                        <div class="detail-icon">
                                            <i class="mdi mdi-calendar-range"></i>
                                        </div>
                                        <div class="detail-content">
                                            <span class="detail-label">Fechas del Evento</span>
                                            <span class="detail-value">@reserva.FechaInicioFormateada - @reserva.FechaFinFormateada</span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <div class="detail-icon">
                                            <i class="mdi mdi-clock-outline"></i>
                                        </div>
                                        <div class="detail-content">
                                            <span class="detail-label">Duración</span>
                                            <span class="detail-value">@reserva.DuracionEnDias día@(reserva.DuracionEnDias != 1 ? "s" : "")</span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <div class="detail-icon">
                                            <i class="mdi mdi-account-group"></i>
                                        </div>
                                        <div class="detail-content">
                                            <span class="detail-label">Personas</span>
                                            <span class="detail-value">@reserva.CantidadPersonas persona@(reserva.CantidadPersonas != 1 ? "s" : "")</span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <div class="detail-icon">
                                            <i class="mdi mdi-calendar-plus"></i>
                                        </div>
                                        <div class="detail-content">
                                            <span class="detail-label">Fecha de Reserva</span>
                                            <span class="detail-value">@reserva.FechaReservaFormateada</span>
                                        </div>
                                    </div>
                                </div>

                        @if (!string.IsNullOrEmpty(reserva.Comentarios))
                                {
                                    <div class="comentarios-section">
                                        <div class="comentarios-header">
                                            <i class="mdi mdi-message-text"></i>
                                            <span>Comentarios:</span>
                                        </div>
                                        <p class="comentarios-text">@reserva.Comentarios</p>
                                    </div>
                                }

                                <div class="organizador-section">
                                    <div class="organizador-info">
                                        <div class="organizador-avatar">
                                            <i class="mdi mdi-account-circle"></i>
                                        </div>
                                        <div class="organizador-details">
                                            <span class="organizador-label">Organizado por</span>
                                            <span class="organizador-name">@reserva.NombreCreador</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="reserva-footer">
                            <div class="precio-section">
                                <span class="precio-label">Total Pagado:</span>
                                <span class="precio-amount">@reserva.PrecioFormateado</span>
                            </div>

                            <div class="reserva-actions">
                                <a href="/ReservasSociales/Detalle/@reserva.IdEventoSocial" class="btn-modern btn-primary">
                                    <i class="mdi mdi-eye"></i>
                                    Ver Evento
                                </a>
                                @if (reserva.PuedeCancelar)
                                {
                                    <button class="btn-modern btn-danger" onclick="cancelarReserva(@reserva.IdReservaSocial)">
                                        <i class="mdi mdi-close"></i>
                                        Cancelar
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="mdi mdi-bookmark-off"></i>
                </div>
                <h4 class="empty-title">No tienes reservas de eventos sociales aún</h4>
                <p class="empty-subtitle">¡Explora nuestros increíbles eventos y haz tu primera reserva!</p>
                <a href="/ReservasSociales/Explorar" class="btn-modern btn-primary btn-large">
                    <i class="mdi mdi-calendar-star"></i>
                    Explorar Eventos
                </a>
            </div>
        }
    </div>
</div>

