    @@media only screen and (max-width: 968px) {
        .filters-content

    {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .details-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .reserva-footer {
        flex-direction: column;
        align-items: stretch;
        text-align: center;
    }

    .reserva-actions {
        justify-content: center;
    }

    }

