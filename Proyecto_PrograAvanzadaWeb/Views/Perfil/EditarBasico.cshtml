@model Proyecto_PrograAvanzadaWeb.Models.ActualizarPerfilBasico
@{
    ViewData["Title"] = "Editar Información Básica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="edit-container">
    <div class="edit-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="mdi mdi-account-edit"></i>
            </div>
            <div class="header-text">
                <h1>Editar Información Básica</h1>
                <p>Actualiza tu información personal principal</p>
            </div>
        </div>
        <a href="@Url.Action("Index", "Perfil")" class="btn-back">
            <i class="mdi mdi-arrow-left"></i>
            Volver al Perfil
        </a>
    </div>

    <div class="form-container">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-error">
                <div class="alert-icon">
                    <i class="mdi mdi-alert-circle"></i>
                </div>
                <div class="alert-content">
                    <strong>Error</strong>
                    <p>@ViewBag.Error</p>
                </div>
                <button class="alert-close" onclick="this.parentElement.remove()">
                    <i class="mdi mdi-close"></i>
                </button>
            </div>
        }

        @if (ViewBag.Exito != null)
        {
            <div class="alert alert-success">
                <div class="alert-icon">
                    <i class="mdi mdi-check-circle"></i>
                </div>
                <div class="alert-content">
                    <strong>¡Éxito!</strong>
                    <p>@ViewBag.Exito</p>
                </div>
                <button class="alert-close" onclick="this.parentElement.remove()">
                    <i class="mdi mdi-close"></i>
                </button>
            </div>
        }

        <form method="post" asp-action="EditarBasico" asp-controller="Perfil" class="modern-form">
            @Html.HiddenFor(m => m.IdUsuario)

            <div class="form-card">
                <div class="form-grid">
                    <div class="form-field full-width">
                        <label for="Nombre" class="field-label">
                            <i class="mdi mdi-account"></i>
                            Nombre Completo <span class="required">*</span>
                        </label>
                        <input type="text"
                               class="field-input"
                               id="Nombre"
                               name="Nombre"
                               value="@Model.Nombre"
                               required
                               placeholder="Ingresa tu nombre completo">
                        <div class="field-hint">Este será tu nombre de perfil visible</div>
                    </div>

                    <div class="form-field">
                        <label for="Correo" class="field-label">
                            <i class="mdi mdi-email"></i>
                            Correo Electrónico <span class="required">*</span>
                        </label>
                        <input type="email"
                               class="field-input"
                               id="Correo"
                               name="Correo"
                               value="@Model.Correo"
                               required
                               placeholder="ejemplo@email.com">
                        <div class="field-hint">Debe ser único en el sistema</div>
                    </div>

                    <div class="form-field">
                        <label for="Identificacion" class="field-label">
                            <i class="mdi mdi-card-account-details"></i>
                            Identificación <span class="required">*</span>
                        </label>
                        <input type="text"
                               class="field-input"
                               id="Identificacion"
                               name="Identificacion"
                               value="@Model.Identificacion"
                               required
                               placeholder="Número de identificación">
                        <div class="field-hint">Cédula o documento de identidad</div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-modern btn-primary">
                        <i class="mdi mdi-content-save"></i> Guardar Cambios
                    </button>
                    <a href="@Url.Action("Index", "Perfil")" class="btn-modern btn-secondary">
                        <i class="mdi mdi-close"></i> Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .edit-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
        margin-left: 280px; 
    }

    .edit-header {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: white;
        position: relative;
        overflow: hidden;
        flex-wrap: wrap;
        gap: 20px;
    }

        .edit-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 20%, rgba(255,255,255,0.1) 0%, transparent 70%);
            pointer-events: none;
        }

    .header-content {
        display: flex;
        align-items: center;
        gap: 20px;
        z-index: 1;
    }

    .header-icon {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .header-text h1 {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0 0 4px 0;
    }

    .header-text p {
        font-size: 1rem;
        opacity: 0.9;
        margin: 0;
    }

    .btn-back {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        z-index: 1;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

    .form-container {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
    }

    .modern-form {
        padding: 0;
    }

    .form-card {
        padding: 40px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 30px;
    }

    .form-field.full-width {
        grid-column: 1 / -1;
    }

    .field-label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .required {
        color: #ef4444;
    }

    .field-input {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8fafc;
        color: #374151;
    }

        .field-input:focus {
            outline: none;
            border-color: #6b7280;
            background: white;
            box-shadow: 0 0 0 3px rgba(107, 114, 128, 0.1);
            transform: translateY(-1px);
        }

        .field-input::placeholder {
            color: #9ca3af;
        }

    .field-hint {
        font-size: 0.85rem;
        color: #6b7280;
        margin-top: 6px;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        flex-wrap: wrap;
    }

    .btn-modern {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #4b5563 0%, #374151 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(75, 85, 99, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(75, 85, 99, 0.4);
        }

    .btn-secondary {
        background: #f3f4f6;
        color: #374151;
        border: 1px solid #e5e7eb;
    }

        .btn-secondary:hover {
            background: #e5e7eb;
            transform: translateY(-1px);
            color: #1f2937;
            text-decoration: none;
        }

    .alert {
        margin: 20px;
        padding: 20px;
        border-radius: 12px;
        display: flex;
        align-items: flex-start;
        gap: 15px;
        position: relative;
    }

    .alert-error {
        background: #fef2f2;
        border: 1px solid #fecaca;
        color: #991b1b;
    }

    .alert-success {
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        color: #166534;
    }

    .alert-close {
        position: absolute;
        top: 15px;
        right: 15px;
        background: none;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        opacity: 0.6;
        transition: opacity 0.3s ease;
    }

        .alert-close:hover {
            opacity: 1;
        }

    @@media only screen and (max-width: 1024px) {
        .edit-container {
            margin-left: 0;
            padding: 0 15px;
        }
    }

    @@media only screen and (max-width: 768px) {
        .edit-container {
            margin-left: 0;
            padding: 0 10px;
        }

        .edit-header {
            flex-direction: column;
            text-align: center;
            gap: 20px;
        }

        .header-content {
            flex-direction: column;
            text-align: center;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-modern {
            justify-content: center;
            width: 100%;
        }
    }
</style>